# direnv configuration for BioMechanics_Microprocessor project
# Automatically loads uv virtual environment when entering directory

# Use uv virtual environment
if [ -d ".venv" ]; then
    source .venv/bin/activate
    echo "✓ Activated uv virtual environment (.venv)"
elif [ -f "pyproject.toml" ]; then
    echo "⚠ Virtual environment not found. Run: uv venv"
fi

# Set Python path to include project modules
export PYTHONPATH="${PWD}:${PYTHONPATH}"

# Optional: Load additional environment variables from .env file
if [ -f .env ]; then
    dotenv
fi

# Project-specific settings
export PROJECT_ROOT="${PWD}"
export KINEINTRA_DEBUG="${KINEINTRA_DEBUG:-0}"

# Helpful aliases (optional)
alias pytest="uv run pytest"
alias python="uv run python"
